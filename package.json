{
  "name": "pplx-zero",
  "version": "1.0.0",
  "description": "PPLX-Zero: Minimal, fast Perplexity AI search CLI - zero configuration, zero compromises",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pplx": "dist/cli.js"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "rm -rf dist && bun build src/cli.ts --target node --outdir dist",
    "build:binary": "bun build --compile src/cli.ts --outfile=dist/pplx",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "bun tsc --noEmit",
    "lint": "bun run --bun eslint src/**/*.ts",
    "lint:fix": "bun run --bun eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "dev:debug": "bun --inspect src/cli.ts"
  },
  "dependencies": {
    "@perplexity-ai/perplexity_ai": "^0.11.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "bun-types": "latest",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "pplx-zero",
    "perplexity",
    "search",
    "ai",
    "cli",
    "command-line",
    "tool",
    "typescript",
    "bun",
    "api",
    "minimal",
    "fast",
    "productivity",
    "zero-config"
  ],
  "author": "Kenzo",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ]
}
